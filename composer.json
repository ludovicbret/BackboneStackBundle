{
    "name"       : "lb/backbone-stack",
    "type"       : "symfony-bundle",
    "description": "Backbone stack for Symfony2",
    "keywords"   : ["backbone", "form", "utils", "js"],
    "license"    : "MIT",
    "version"    : "master",
    "authors"    : [
        {
            "name": "Ludovic Bret",
            "email": "bretludovic@googlemail.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "Lb\\BackboneStackBundle": ""
        }
    },
    "target-dir": "Lb/BackboneStackBundle",
    "require"   : {
        "symfony/symfony"          : "2.1.*",
        "mopa/composer-bridge"     : "dev-master",
        "hearsay/require-js-bundle": "dev-master",
        "documentcloud/underscore" : "*",
        "documentcloud/backbone"   : "*",
        "douglascrockford/JSON-js" : "*"
    },
    "suggest":  {
        "twitter/bootstrap"                : "2.0.*",
        "friendsofsymfony/jsrouting-bundle": "dev-master"
    },
    "repositories": [
        {
            "type": "vcs",
            "url" : "https://github.com/powmedia/backbone-forms.git"            
        },
        {
            "type": "git",
            "url" : "https://github.com/documentcloud/underscore.git"
        },
        {
            "type": "git",
            "url" : "https://github.com/documentcloud/backbone.git"
        },
        {
            "type": "git",
            "url" : "https://github.com/douglascrockford/JSON-js.git"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap"
        ],
        "post-update-cmd": [
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1.x-dev"
        }
    },

    "minimum-stability": "dev"
}
